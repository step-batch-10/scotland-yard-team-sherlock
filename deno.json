{
  "imports": {
    "assert": "jsr:@std/assert@^1.0.12",
    "hono": "npm:hono@^4.7.6"
  },
  "tasks": {
    "start": "deno run -A --watch server.js",
    "test": "deno test -A",
    "lint": "deno lint",
    "format": "deno fmt",
    "test-coverage": "deno test -A --coverage=coverage --clean",
    "coverage": {
      "command": "deno coverage --html && deno run -A jsr:@ashishkujoy/deno-coverage-checker@0.0.8",
      "dependencies": ["test-coverage"]
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase", "eqeqeq", "default-param-last", "no-console"],
      "exclude": []
    }
  },

  "fmt": {
    "indentWidth": 2,
    "semiColons": true
  },
  "test": {
    "include": ["**/*.js"],
    "exclude": ["server.js"]
  }
}
